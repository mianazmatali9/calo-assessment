{
  "name": "@calo/backend",
  "version": "0.0.1",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "pnpm prebuild && tsc -p tsconfig.prod.json",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'node --loader ts-node/esm' src/server.ts",
    "lint": "npx eslint --ext .ts,.js src/",
    "lint:fix": "pnpm lint --fix",
    "test": "cross-env ENVIRONMENT=test ../../node_modules/jest/bin/jest.js -i",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "20.4.0",
    "copyfiles": "^2.4.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
